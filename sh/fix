# i suggest that before you fix you sometimes asciify, i.e.,
# /usr/bin/perl -pe 's/[^[:ascii:]]/+/g' \
 
expand \
    | tr '\r' '\n' \
    | sed \
      -e 's/^[ ]*//' \
      -e 's/^[ ]*,[ ]*//' \
      -e 's/[ ]*$//' \
      -e 's/ [ ]*/ /g' \
      -e 's/^[> ]*//' \
      -e 's/ =$//' \
      -e 's/=$/-/' \
      -e 's/[ ]*=20$//'\
      -e 's/=91/'"'"'/g' \
      -e 's/=92/`/g' \
      -e 's/=96/-/g'  \
      -e 's/,[,]*$/,/g' \
      -e 's/^[,]*//g' 

# cf http://www.w3schools.com/TAGS/ref_urlencode.asp
